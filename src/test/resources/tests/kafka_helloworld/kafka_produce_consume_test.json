{
    "scenarioName": "New message - Produce and consume a message from kafka",
    "steps": [
        {
            "name": "consume_and_commit", //just waiting for the new messages after this step
            "url": "kafka-topic:hello-demo",
            "operation": "consume",
            "request": {
                "consumerLocalConfigs": {
                    "commitSync": true
                    //"commitAsync": true
                }
            },
            "assertions": {
                "status" : "Ok"
            }
        },
        {
            "name": "produce_record",
            "url": "kafka-topic:hello-demo",
            "operation": "produce",
            "request": {
                "key": "${RANDOM.NUMBER}",
                "value": "Hello World"
            },
            "assertions": {
                "status" : "Ok"
            }
        },
        {
            "name": "consume_record",
            "url": "kafka-topic:hello-demo",
            "operation": "consume",
            "request": {
            },
            "assertions": {
                "recordCount" : 1
            }
        }
    ]
}
