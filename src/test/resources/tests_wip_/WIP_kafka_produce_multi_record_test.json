{
    "scenarioName": "WIP_kafka_produce_multi_record_test.json",
    "steps": [
        {
            "name": "produce_record",
            "url": "kafka-topic:hello-demo",
            "operation": "produce",
            "request": [
                {
                    "key": "${RANDOM.NUMBER}",
                    "value": "Hello World 1"
                },
                {
                    "key": "${RANDOM.NUMBER}",
                    "value": "Hello World 2"
                }
            ],
            "assertions": {
                "status" : "Ok"
            }
        },
        {
            "name": "consume_record",
            "url": "kafka-topic:hello-demo",
            "operation": "consume",
            "request": {
                "consumerLocalConfigs": {
                    "commitSync":false,
                    "commitAsync":false,
                    "showRecordsInResponse": true
                }

            },
            "assertions": {
                // this will 1  only when consumer does a commit i.e. commitAsync or sync,
                // otherwise 3 or more as earler messages will still be there
                "recordCount" : "$GT.1"
            }
        }
    ]
}
