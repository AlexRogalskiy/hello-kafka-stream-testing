{
    "scenarioName": "WIP_kafka_produce_multi_record_test.json",
    "steps": [
        {
            "name": "commit_after_read",
            "url": "kafka-topic:hello-demo",
            "operation": "consume",
            "request": {
                "consumerLocalConfigs": {
                    "commitSync":true,
                    "showRecordsInResponse": true
                }

            },
            "assertions": {
            }
        },
        {
            "name": "produce_record1",
            "url": "kafka-topic:hello-demo",
            "operation": "produce",
            "request": {
                "key": "${RANDOM.NUMBER}",
                "value": "Hello World 1"
            },
            "assertions": {
                "status" : "Ok"
            }
        },
        {
            "name": "produce_record2",
            "url": "kafka-topic:hello-demo",
            "operation": "produce",
            "request": {
                "key": "${RANDOM.NUMBER}",
                "value": "Hello World 2"
            },
            "assertions": {
                "status" : "Ok"
            }
        },
        {
            "name": "consume_record",
            "url": "kafka-topic:hello-demo",
            "operation": "consume",
            "request": {
                "consumerLocalConfigs": {
                    "showRecordsInResponse": true
                }

            },
            "assertions": {
                "recordCount" : 2
            }
        }
    ]
}
